<h1>Корзина</h1>
{{#if games.length }}
  <table>
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      {{#each games}}
        <tr>
          <td>{{ title }}</td>
          <td>{{ count }}</td>
          <td>
            <button class='btn btn-small'>Удалить</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <p>
    <strong>Цена: </strong><span class='price'> {{ price }}</span>
  </p>
{{else}}
  <p>Корзина пуста</p>
{{/if}}